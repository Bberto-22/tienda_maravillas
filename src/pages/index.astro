import OfferCard from '../components/ui/OfferCard.astro';

const offers = [
	{
		image: '/images/producto1.jpeg',
		title: 'Colonia bustamante',
		description: '30% de descuento en colonia bustamante de alta calidad',
	},
	{
		image: '/images/producto1.jpeg',
		title: 'Colonia bustamante',
